<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/add_custom"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/add_15" android:drawableStart="@android:drawable/ic_input_add"
            android:text="@string/add_custom_minute_lesson"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/imageView"
            android:contentDescription="@string/student_avatar"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/student_name"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" tools:text="Blah Blah"/>
    <Button
            android:text="@string/twenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/add_twenty"
            android:drawableStart="@android:drawable/ic_input_add" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/add_15" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginTop="16dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/add_15"
            android:text="@string/fifteen"
            android:drawableStart="@android:drawable/ic_input_add" android:layout_marginEnd="216dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:text="@string/lessons" android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/Payment"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/editText3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/add_custom"/>
</androidx.constraintlayout.widget.ConstraintLayout>